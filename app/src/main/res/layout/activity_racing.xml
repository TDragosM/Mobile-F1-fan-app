<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/bckg"
    tools:context=".RacingActivity">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="369dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="RACING"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />

    <Button
        android:id="@+id/buttonUpcoming"
        android:layout_width="167dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewTitle"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        android:text="Upcoming"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/buttonPast"
        android:layout_width="173dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewTitle"
        android:layout_marginStart="9dp"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@id/buttonUpcoming"
        android:background="@android:color/transparent"
        android:text="Past"
        android:textColor="#FFFFFF" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="382dp"
        android:layout_height="536dp"
        android:layout_above="@id/buttonsLayout"
        android:layout_below="@id/textViewTitle"
        android:layout_marginTop="67dp">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <LinearLayout
        android:id="@+id/buttonsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonRacing"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Racing"
            android:textColor="#FFFFFF"
            android:background="@android:color/transparent" />

        <Button
            android:id="@+id/buttonDrivers"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Drivers"
            android:textColor="#FFFFFF"
            android:background="@android:color/transparent" />

        <Button
            android:id="@+id/buttonConstructors"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Constructors"
            android:textColor="#FFFFFF"
            android:background="@android:color/transparent" />

    </LinearLayout>

</RelativeLayout>
